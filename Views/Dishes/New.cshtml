@{
    ViewData["Title"] = "Home Page";
}
@model Dish; 

<div class="container text-center px-5">
    <h3><a href="/">Chefs</a>  |  <a href="/dishes">Dishes</a>  |  <a href="/chefs/new">Add a Chef</a>  |  Add a Dish</h3>
    <h1 class="display-4">Add a new Dish!</h1>
    <hr>
    <form class="form-group d-flex justify-content-between m-5" asp-action="CreateDish" asp-controller="Dishes" method="post">
        <div class="d-flex flex-column justify-content-between mx-2 ">
            @{
                var ID = Context.Session.GetInt32("UUID");
                // var Name = Context.Session.GetString("FullName");
            }
            <input type="hidden" asp-for="ChefId" value=@ID>
            @* <input type="hidden" asp-for="ChefName" value=@Name> *@

            <label asp-for="DishName"></label>
            <input asp-for="DishName">
            <span asp-validation-for="DishName" class="text-danger"></span>
            <br>
            <label asp-for="Calories"></label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
            <br>
        </div>
        <div class="d-flex flex-column justify-content-start mx-2">
            <label asp-for="Tastiness"></label>
            <input asp-for="Tastiness">
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <button class="btn btn-secondary mt-3" type="submit">Add Dish</button>
        </div>
        @* <div class="d-flex flex-column justify-content-start mx-2">
            <label asp-for="Description"></label>
            <input asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div> *@
    </form>
</div>