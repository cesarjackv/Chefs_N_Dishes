@{
    ViewData["Title"] = "Home Page";
}
@model Dish; 

<div class="container text-center px-5">
    <h1 class="display-4">Edit @Model.DishName</h1>
    <h3><a href="/dashboard">Home</a>  |  <a href="/dishes/new">Add a Dish</a></h3>
    <form class="form-group d-flex justify-content-between m-3" asp-action="UpdateDish" asp-controller="Dishes" asp-route-DishId="@Model.DishId" method="post">
        <div class="d-flex flex-column justify-content-between mx-2">
            <label asp-for="ChefName"></label>
            <input asp-for="ChefName" value="@Model.ChefName">
            <span asp-validation-for="ChefName" class="text-danger"></span>
            <label asp-for="DishName"></label>
            <input asp-for="DishName" value="@Model.DishName">
            <span asp-validation-for="DishName" class="text-danger"></span>
            <label asp-for="Calories"></label>
            <input asp-for="Calories" value="@Model.Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column justify-content-start mx-2">
            <label asp-for="Tastiness"></label>
            <input asp-for="Tastiness" value="@Model.Tastiness">
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <button class="btn btn-secondary mt-3" type="submit">Edit Dish</button>
        </div>
        @* <div class="d-flex flex-column justify-content-start mx-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" value="@Model.Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div> *@
    </form>
</div>